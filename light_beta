import streamlit as st
import math

# --- CONFIGURAZIONE PAGINA ---
st.set_page_config(page_title="Gestione Addolcitori", page_icon="ðŸš°", layout="centered")

# --- STILE CSS PER RISULTATI CHIARI ---
st.markdown("""
    <style>
    .valore-evidenziato {
        font-size: 30px !important;
        font-weight: bold;
        color: #00AEEF;
    }
    .titolo-sezione {
        font-size: 20px;
        font-weight: bold;
        color: var(--text-color);
        border-bottom: 2px solid #00AEEF;
        margin-bottom: 15px;
        margin-top: 25px;
    }
    .result-box {
        padding: 15px;
        border-radius: 10px;
        border: 1px solid rgba(128, 128, 128, 0.3);
        background-color: rgba(128, 128, 128, 0.05);
        margin-bottom: 12px;
    }
    </style>
    """, unsafe_allow_html=True)

st.title("ðŸš° Modulo Addolcitori")
st.write("Calcolo rapido di autonomia, sale e salamoia.")

# --- INPUT DATI ---
st.markdown('<p class="titolo-sezione">1. Parametri Impianto</p>', unsafe_allow_html=True)
c1, c2 = st.columns(2)
with c1:
    v_resina = st.number_input("Volume Resina (Litri)", min_value=1, value=25)
    durezza_in = st.number_input("Durezza Acqua Grezza (Â°f)", min_value=1, value=35)
with c2:
    durezza_out = st.number_input("Durezza Miscelata Uscita (Â°f)", min_value=0, value=15)
    cons_m3_giorno = st.number_input("Consumo Acqua Giornaliero (mÂ³)", min_value=0.01, value=0.6, step=0.1)

# --- LOGICA DI CALCOLO ---
durezza_da_abbattere = durezza_in - durezza_out

if durezza_da_abbattere <= 0:
    st.error("Errore: La durezza in uscita deve essere inferiore a quella in entrata.")
else:
    # 1. CapacitÃ  Ciclica (standard 5.0 m3*Â°f per litro resina)
    cap_ciclica = v_resina * 5 
    
    # 2. Autonomia Ciclica (m3 di acqua dolce prodotti)
    m3_ciclo = cap_ciclica / durezza_da_abbattere
    
    # 3. Giorni tra rigenerazioni
    giorni_autonomia = m3_ciclo / cons_m3_giorno
    
    # 4. Consumo sale per singola rigenerazione (140g/L resina)
    sale_per_rig_kg = (v_resina * 140) / 1000
    
    # 5. Volume Salamoia Satura (1kg sale produce circa 3L di salamoia satura)
    salamoia_litri = sale_per_rig_kg * 3
    
    # 6. Consumo acqua stimato per rigenerazione (circa 7 volte il vol. resina)
    acqua_scarico_rig = (v_resina * 7) / 1000

    # --- VISUALIZZAZIONE RISULTATI ---
    st.markdown('<p class="titolo-sezione">2. Risultati Calcolo</p>', unsafe_allow_html=True)
    
    res1, res2 = st.columns(2)
    with res1:
        st.write("ðŸŒŠ **Produzione Acqua Dolce**")
        st.markdown(f'<div class="result-box"><span class="valore-evidenziato">{m3_ciclo:.2f} mÂ³</span></div>', unsafe_allow_html=True)
        st.write(f"Ogni **{giorni_autonomia:.1f}** giorni l'impianto rigenera.")

    with res2:
        st.write("ðŸ§‚ **Consumo Sale**")
        st.markdown(f'<div class="result-box"><span class="valore-evidenziato">{sale_per_rig_kg:.2f} kg</span></div>', unsafe_allow_html=True)
        st.write(f"Sale per singola rigenerazione.")

    st.markdown("---")
    
    st.write("ðŸ“Š **Dettagli Tecnici per Settaggio Valvola:**")
    det1, det2, det3 = st.columns(3)
    det1.metric("CapacitÃ  Ciclica", f"{cap_ciclica} mÂ³Â·Â°f")
    det2.metric("Volume Salamoia", f"{salamoia_litri:.1f} L")
    det3.metric("Acqua Scarico", f"{acqua_scarico_rig*1000:.0f} L")

    # --- STIMA ANNUALE ---
    st.markdown('<p class="titolo-sezione">3. Previsione Annuale</p>', unsafe_allow_html=True)
    if giorni_autonomia > 0:
        rigenerazioni_anno = 365 / giorni_autonomia
        sale_anno_kg = rigenerazioni_anno * sale_per_rig_kg
        sacchi_anno = math.ceil(sale_anno_kg / 25)
        
        col_a, col_b = st.columns(2)
        with col_a:
            st.write(f"ðŸ“… Rigenerazioni: **{int(rigenerazioni_anno)}/anno**")
        with col_b:
            st.write(f"ðŸ“¦ Sacchi sale (25kg): **{sacchi_anno}**")
